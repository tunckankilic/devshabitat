# Uncomment this line to define a global platform for your project
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Google Maps için gerekli pod'lar
  pod 'GoogleMaps', '8.4.0'  # Daha stabil versiyon
  pod 'Google-Maps-iOS-Utils', '~> 5.0.0'  # Versiyon güncellendi
  
  # Agora pod'u
  pod 'AgoraRtcEngine_iOS', '~> 4.5.2'
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      
      # Google Maps için gerekli ayarlar
      config.build_settings['OTHER_LDFLAGS'] ||= []
      config.build_settings['OTHER_LDFLAGS'] << '-ObjC'
      
      # XCode 15+ için gerekli ayarlar
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        ## dart: PermissionGroup.camera
        'PERMISSION_CAMERA=1',
        ## dart: PermissionGroup.photos
        'PERMISSION_PHOTOS=1',
        ## dart: PermissionGroup.location
        'PERMISSION_LOCATION=1',
        ## dart: PermissionGroup.locationWhenInUse
        'PERMISSION_LOCATION_WHEN_IN_USE=1',
        ## dart: PermissionGroup.notification
        'PERMISSION_NOTIFICATIONS=1',
      ]
      
      # Bitcode desteğini kapat
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Swift version ayarları
      if config.build_settings['SWIFT_VERSION'].nil?
        config.build_settings['SWIFT_VERSION'] = '5.0'
      end
      
      # Privacy manifest ayarları
      config.build_settings['GENERATE_INFOPLIST_FILE'] = 'YES'
      
      # Metal performans optimizasyonları
      config.build_settings['MTL_ENABLE_DEBUG_INFO'] = 'NO'
      
      # XCode 15 uyumluluk ayarları
      config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
      
      # Simulator için arm64 hariç tut (sadece Debug'da)
      if config.name == 'Debug'
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      end

      # Agora için gerekli ayarlar
      config.build_settings['VALID_ARCHS'] = 'arm64 x86_64'
      
      # Framework search paths
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= []
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(inherited)'
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PROJECT_DIR)/../.symlinks/plugins/google_maps_flutter_ios/ios/Frameworks'
      
      # Header search paths
      config.build_settings['HEADER_SEARCH_PATHS'] ||= []
      config.build_settings['HEADER_SEARCH_PATHS'] << '$(inherited)'
    end
  end
end